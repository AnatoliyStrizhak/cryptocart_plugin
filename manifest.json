{
    "manifest_version": 2,

    "name": "CryptoCart",
    "description": "Cart",
    "version": "0.2",

    "icons": { "16": "logo16.png",
           "48": "logo48.png",
          "128": "logo128.png" },

    "default_locale": "en_US",

    "permissions": [ "tabs", "http://*/*", "https://*/*", "storage", "contextMenus"],

    "background": {"scripts": ["background.js"]},

    "description": "Pokupo CryptoCart - pay for orders in *coins",

    "browser_action": {
        "default_icon": "logo_bw.png",
        "default_title": "CryptoCart",
        "default_popup": "popup.html"
    }
}
